#:kivy 2.0.0

ScreenManager:
    LoginScreen:
        name: 'login'
    MainScreen:
        name: 'main'


<LoginScreen>:
    orientation: 'vertical'
    padding: [50, 20]
    spacing: 20

    Label:
        text: 'Plataforma de Login (com .kv)'
        font_size: '24sp'
        bold: True
        size_hint_y: None
        height: 50

    GridLayout:
        cols: 2
        spacing: 10
        size_hint_y: None
        height: 80

        Label:
            text: 'Usuário:'
            font_size: '18sp'

        TextInput:
            id: user_input
            multiline: False
            font_size: '18sp'
            hint_text: 'Digite seu usuário'

        Label:
            text: 'Senha:'
            font_size: '18sp'

        TextInput:
            id: pass_input
            multiline: False
            password: True
            font_size: '18sp'
            hint_text: 'Digite sua senha'

    Button:
        text: 'Entrar'
        font_size: '20sp'
        size_hint_y: None
        height: 50
        on_press: root.verificar_login()

    Label:
        id: feedback
        text: ''
        font_size: '16sp'
        color: (1, 0, 0, 1)


<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20]
        spacing: 10

        Label:
            text: 'Tela Principal'
            font_size: '24sp'
            size_hint_y: None
            height: 50

        Label:
            text: 'Você está logado.'
            font_size: '18sp'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 120
            spacing: 8

            Label:
                text: 'Comando a executar (se vazio executa codigoParaInicar.py)'
                size_hint_y: None
                height: 24

            TextInput:
                id: command_input
                multiline: False
                hint_text: 'Ex: python meu_script.py --arg valor'

            BoxLayout:
                size_hint_y: None
                height: 40
                spacing: 10

                Button:
                    text: 'Executar Comando'
                    on_press: root.run_command()

                Button:
                    text: 'Logout'
                    size_hint_x: None
                    width: 120
                    on_press: app.root.current = 'login'

        Label:
            id: main_feedback
            text: ''
            size_hint_y: None
            height: 30
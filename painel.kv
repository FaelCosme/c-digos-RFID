<Painel>:
    orientation: "vertical"
    padding: 40
    spacing: 40

    Label:
        id: estado
        text: "LED Desligado"
        font_size: 48
        color: 1, 0, 0, 1

    Button:
        text: "Alternar LED"
        font_size: 42
        size_hint: (1, 0.3)
        background_color: 0, 0.6, 0, 1
        on_press: root.alternar_led()

    Button:
        text: "Sair"
        font_size: 32
        size_hint: (1, 0.2)
        background_color: 0.8, 0, 0, 1
        on_press: app.stop()
